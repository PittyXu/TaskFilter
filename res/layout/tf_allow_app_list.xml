<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >
<RelativeLayout android:layout_width="match_parent" android:layout_height="48dip" >

    <ImageView
        android:id="@+id/tf_list_app_icon"
        android:layout_width="42dip"
        android:layout_height="42dip"
        android:layout_marginLeft="10dip" android:background="@drawable/ic_launcher" android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/tf_list_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tf_list_app_icon"
        android:text="TextView"
        android:textSize="20sp" android:layout_marginLeft="20dip" android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/tf_list_app_deny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dip"
        android:src="@android:drawable/presence_busy" android:visibility="gone"/>

    <ImageView
        android:id="@+id/tf_list_app_allow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imageView1"
        android:layout_marginRight="20dip"
        android:src="@android:drawable/presence_online" android:layout_centerVertical="true" android:visibility="visible"/>

</RelativeLayout>
</LinearLayout>